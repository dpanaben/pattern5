<h1><%=(t "sanitize.page.index.title")%></h1>
  <%= link_to (t "sanitize.newbutton"), new_portfolio_sanitize_path(@portfolio, @sanitize), :class => "btn btn-primary pull-right" %>
  <table class="table table-strip">
    <thead>
      <tr>
        <th><%=(t "sanitize.status")%></th>
        <th><%=(t "sanitize.match")%></th>
        <th><%=(t "sanitize.result")%></th>
        <th><%=(t "sanitize.description")%></th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <% @sanitizes.each do |sanitize| %>
        <tr>
          <td><%= link_to sanitize.status, changestatus_portfolio_sanitize_path(@portfolio, sanitize), method: :post %></td>
          <td><%= sanitize.match %></td>
          <td><%= sanitize.result %></td>
          <td><%= sanitize.description %></td>
          <td><%= link_to (t "edit"), edit_portfolio_sanitize_path(@portfolio, sanitize) %></td>
          <td><%= link_to (t "destroy"), portfolio_sanitize_path(@portfolio, sanitize), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
